%p
  = form_tag do
    %fieldset
    %legend= t(".login")
    %div
      = label_tag :name, t(".name")
      = text_field_tag "name"
    %div
      = label_tag :password, t(".password")
      = password_field_tag "password"
    %div
      = submit_tag t(".submit"), :class => "btn btn-large btn-primary"
